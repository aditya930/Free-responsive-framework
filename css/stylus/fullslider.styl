height_slide = 750px

transform_rotate(value) 

	-webkit-transform: rotate(value)
	-moz-transform: rotate(value)
	-ms-transform: rotate(value)
	transform: rotate(value)


m_transition(property, name, effect)

	transition: property name effect 0s
	-moz-transition: property name effect 0s
	-webkit-transition: property name effect 0s
	-webkit-transition-delay:  name 0s


transform_rotateY(value) 

	-webkit-transform: rotateY(value)
	-moz-transform: rotateY(value)
	-ms-transform: rotateY(value)
	transform: rotateY(value)


transform_rotateX(value) 

	-webkit-transform: rotateX(value)
	-moz-transform: rotateX(value)
	-ms-transform: rotateX(value)
	transform: rotateX(value)


animation(name, duration, delay)

	-webkit-animation-name: name
	animation-name: name
	
	-webkit-animation-duration: duration
	animation-duration: duration
	
	-webkit-animation-delay: delay
	animation-delay: delay


transform_scale(value) 
		
	-ms-transform: scale(value)
	-moz-transform: scale(value)
	-webkit-transform: scale(value)
	transform: scale(value)


m_translate(x,y) 

	-webkit-transform: translateZ(0px) translate(x, y)
	-ms-transform: translateZ(0px) translate(x, y) 
	transform: translateZ(0px) translate(x, y)


/**********************************************all**********************************************/

* 
	margin : 0
	padding : 0 
	border : 0
	outline: medium none
	list-style: none

#slideshow 

	height: height_slide
	position: relative
	
	text-align: left
	overflow: hidden
	margin: 0 auto



#slidesContainer 
	height: height_slide
	overflow: hidden
	position: relative


#slideInner:after
	clear: both
	display: block
	content: ""


.slide 

	float: left
	position: relative

	height: height_slide
	cursor: url(../icons/take.png) 8 8, move


#slideshow:hover

	.arrow
		m_translate(0%, -50%)
	


.arrow

	width: 40px
	height: 70px
	
	padding: 8px 15px
	background-color: rgba(0, 147, 184, .8)
	cursor: pointer
	
	position: absolute
	top: 50%
	z-index: 8
	
	
	m_transition(transform, .3s, ease-out)


.prev
	m_translate(-120%, -50%)


.next
	right: 0
	m_translate(120%, -50%)


.prev:before, .next:before

	content: ""
	display: block
	
	height: 35px
	width: 35px
	
	position: absolute
	z-index: 8

	transform_rotate(-135deg)
	m_transition(color, 0.4s, ease-in)
	
	border-style: solid
	color: #fff


.prev:before
	border-width: 15px 15px 0 0
	left: 20px
	top: 20px


.next:before
	border-width: 0 0 15px 15px
	top: 20px
	right: 20px


.title_slide 

	font-size: 24px
	color: #000
	font-weight: normal
	text-transform: uppercase
	
	position: absolute
	bottom: 40px
	left: 10px


.link_sait
	color: #1493c8


.description
	position: absolute
	bottom: 0
	left: 10px



