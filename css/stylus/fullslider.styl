/*********360**********/

@media screen and (max-width: 360px)

	#slideshow,#slidesContainer, .slide
		height: 225px
	

	

/******************layer effects**************************/

.layer
	-webkit-animation-fill-mode: both
	animation-fill-mode: both
	display: block
	opacity: 0



.active_slide .scale
	animation(scale, 1s, 1.5s)


@keyframes {scale }
	{0% }
		transform_scale(1.2)
		opacity: 0
	

	{100% }
		transform_scale(1)
		opacity: 1
	


@-webkit-keyframes {scale }
	{0% }
		transform_scale(1.2)
		opacity: 0
	

	{100% }
		transform_scale(1)
		opacity: 1
	


.slide_bottom
	m_translate(0%, -10%)


.active_slide .slide_bottom
	animation(slide_bottom, 1s, 1.5s)


@keyframes {slide_bottom }
	{0% }
		m_translate(0%,0%)	
		opacity: 0
	

	{100% }
		m_translate(0%,-10%)
		opacity: 1
	


@-webkit-keyframes {slide_bottom} 
	{0% }
		m_translate(0%,0%)
		opacity: 0
	

	{100% }
		m_translate(0%,-10%)
		opacity: 1
	 


