.active_slide .flipX
	animation(flipX, 1s, .5s)
	
@-webkit-keyframes {flipX }
	{0% }
		opacity: 0
		transform_rotateX(90deg)
	

	{100% }
		opacity: 1
		transform_rotateX(0deg)
		
@keyframes {flipX }
	{0% }
		opacity: 0
		transform_rotateX(90deg)
	

	{100% }
		opacity: 1
		transform_rotateX(0deg)

